.Tips{
  color: #c1c1c1;
  text-align: center;
  font-size: .8rem;
  height: 2.4rem;
  line-height: 2.4rem;
  background: #fafafa;
}
.addintention{
  width: 90%;
  height: 3.5rem;
   border-bottom: 1px solid #eeeeee;
   position: relative;
   margin: 0 auto;
   background: white;
}
.addintention image:nth-child(1){
  width:1.2rem;
  height: 1.1rem;
  margin-top: 1.3rem;
  margin-right: .8rem;
}
.addintention text:nth-child(2){
  font-size: 1.2rem;
}
.addintention text:nth-child(3){
  position: absolute;
  top: 1.2rem;
  font-size: .8rem;
  color: #bababa;
  right: .4rem;
}
.addintention image:nth-child(4){
  position: absolute;
  top: 1.4rem;
  width: .4rem;
  height: .7rem;
  right: -.4rem;
}
.submit{
  height: 2.8rem;
  line-height: 2.8rem;
  color: white;
  background: purple;
  width: 90%;
  margin: 0 auto;
  text-align: center;
  border-radius: 5px;
  margin-top: 2rem;
}
picker{
  position: absolute;
  right: 0;
  top: 0;
}