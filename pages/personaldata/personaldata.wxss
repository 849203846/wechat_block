  width: 90%;
  margin: 0 auto;
  height: 3.5rem;
  line-height: 3.5rem;
  position: relative;
  border-bottom: 1px solid #ccc;
}
.informationItem image:nth-child(4){
  position: absolute;
  right: .4rem;
  width: .4rem;
  height: .7rem;
  top: 1.4rem;
}
.informationItem image:nth-child(1){
  position: absolute;
  left: .4rem;
  width: 1.1rem;
  height: 1.14rem;
  top: 1.4rem;
  vertical-align: middle;
}
.informationItem text:nth-child(2){

  position: absolute;
  left: 2.26rem;
  top: .2rem;
  line-height: 3.5rem;
}
.informationItem text:nth-child(3){
  position: absolute;
  right: 1rem;
  font-size: .8REM;
  line-height: 3.5rem;
}
