.tankuang{
  width: 17.5rem;
  background: white;
  position: fixed;
  left: 50%;
  top: 50%;
  height: 12rem;
  margin-left: -8.75rem;
  margin-top: -12rem;
}
.tankuang view:nth-child(1){
  height: 3rem;
  line-height: 3rem;
  text-align: center;
}
.tankuang view:nth-child(1) text:nth-child(1){
  font-size: 1.2rem;
  margin-right: -2rem;
}
.tankuang view:nth-child(1) text:nth-child(2){
  color: #f59800;
  float: right;
  margin-right: 1rem;
}
.tankuang input{
  height: 2.7rem;
  width: 80%;
  margin: 0 auto;
  border: 1px solid #cccccc;
  text-align: center;
  
}
.tankuang view:nth-child(3){
