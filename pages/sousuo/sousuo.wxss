page{
  background: #fafafa;
}
.header{
  width: 100%;
  height: 5rem;
  background: white;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}
.inoutbox{
  width: 90%;
  margin: 0 auto;
  height: 1.8rem;
  display: flex;
  border: 2px solid #dadada;
  border-radius: 5px;
}
.inoutbox view{
  line-height: 1.8rem;
  margin-left: .2rem;
    margin-right: .2rem;
}
.inoutbox view image{
  width: .6rem;
  height:.32rem;
  vertical-align: middle;
}
.inoutbox input{
  border: none;
  flex: 1;
   height: 1.8rem;
   line-height: 1.8rem;
   padding-left: .5rem;

}
.tiaojianbox{
  width: 100%;
  display: flex;
  height: 2.6rem;
  line-height: 2.6rem;
}
.tiaojianbox image{
    width: .6rem;
  height:.32rem;
  vertical-align: middle;
  margin-left: .5rem;
}
.tiaojianbox view{
  flex: 1;
  text-align: center;
}
.tanchu{
  width: 100%;
  background: #fafafa;
  position: fixed;
  top: 5rem;
  left: 0;
  height: 100%;
  background: #4c4c4c;
  z-index: 9;
}
.tanchutitle{
  margin-left: 1.0rem;
  color: #a4a4a4;
  font-size: .8rem;
  margin-top: .7rem;
  margin-bottom: .4rem;
}
.textbox{
  margin-left: 1rem;margin-right: 1rem;font-size: 0;
}
.textbox text:nth-child(4),.textbox text:nth-child(8),.textbox text:nth-child(12){
  margin-right: 0;
}
.tanchu text{
  margin-top: .4rem;
  display: inline-block;
  min-width: 4rem;
  border-radius: 5px;
  border: 1px solid #cbcbcb;
  background: white;
  text-align: center;
  font-size: .8rem;
  height: 1.56rem;
  line-height: 1.56rem;
  margin-right: .4rem;

}
.tanchubox{
  width: 100%;
  overflow: scroll;
  height: 20rem;
  background: #fafafa;
}
.btns{
  width: 100%;
  height: 2.69rem;
  line-height: 2.6rem;
  display: flex;
  border-top: 1px solid #ccc;
}
.btns view{
  text-align: center;
  line-height: 2.6rem;
  flex: 1;
}
.btns view:nth-child(1){
  color: #292929;
  background: white;
}
.btns view:nth-child(2){
  color: white;
  background: #932fe9;
}

.positionItel{
  width: 100%;
  height: 6.6rem;
  border-bottom: .32rem solid #fafafa;
  position: relative;
  padding-top: 1.2rem
}
.positionItel .Title{
  margin-left: 1.1rem;
  /* padding-top: 1.2rem; */
  font-weight: 600;
}
.positionItel .money{
  position: absolute;
  right: 1rem;
  color: #9233eb;
}
.body{
   margin-left: 1.1rem;
   margin-top: 1rem;
}
.company{
    margin-top: 1rem;
  margin-left: 1.1rem;
}
.company image{
  width: 1rem;
  height: 1rem;
  margin-right: .5rem;
}